<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel ui:field = "basePanel">
		<g:VerticalPanel>
				<g:VerticalPanel width = "280px" height = "400px" ui:field = "northSection" styleName="WithPadding" horizontalAlignment="ALIGN_CENTER">
					<g:Image width="100" height="100" url="WEB-INF/classes/org/dselent/course_load_scheduler/client/view/images/loading.gif" ui:field="profilePhoto" />
					<g:Label ui:field="profName" horizontalAlignment="ALIGN_CENTER"> Professor Name</g:Label>
					<g:Label ui:field="profDepartment" horizontalAlignment="ALIGN_CENTER"> Professor Department</g:Label>
					<g:Label ui:field="profRank" horizontalAlignment="ALIGN_CENTER"> Professor Rank</g:Label>
					<g:Label ui:field="profEmail" horizontalAlignment="ALIGN_CENTER"> Professor Email</g:Label>		
				</g:VerticalPanel>
		
				<g:VerticalPanel width = "280px" height = "200px" ui:field = "facMiddleSection" styleName="WithPadding" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:Label>Enter Name of faculty to work on:</g:Label>
					<g:ListBox ui:field = "listOfFaculty"></g:ListBox>
					
				</g:VerticalPanel>
		
				<g:VerticalPanel width = "280px" height = "300px" ui:field = "facBottomSection" styleName="WithPadding" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:Button ui:field="generateScheduleButton">Generate Schedule</g:Button>
					<g:Button ui:field="confirmScheduleButton">Confirm Schedule Change</g:Button>
				</g:VerticalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 